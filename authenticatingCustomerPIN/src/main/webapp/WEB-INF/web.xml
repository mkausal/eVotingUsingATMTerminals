<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>e-Voting System - Authenticate Bank Customer</display-name>
    <servlet>
        <servlet-name>AuthenticateBankCustomer</servlet-name>
        <servlet-class>
                     com.sun.jersey.spi.container.servlet.ServletContainer
                </servlet-class>
        <init-param>
             <param-name>com.sun.jersey.config.property.packages</param-name>
             <param-value>com.eVoting.authentication.bank</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticateBankCustomer</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <filter>
	<filter-name>CORS</filter-name>
	<filter-class>com.eVoting.CORSFilter</filter-class>
	</filter>
	
	<filter-mapping>
	<filter-name>CORS</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>